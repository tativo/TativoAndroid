<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom = "6dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    tools:context=".LogIn.Actividades.Act_LogIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGrisTitulo"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/lblPagare"
                android:paddingTop="15dp"
                android:textSize="18dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lblstContrato"
                android:textSize="10sp"
                android:gravity="center"
                android:paddingBottom="15dp"/>
        </LinearLayout>
        <ScrollView style="@style/TativoScrollView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGrisCuerpo"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/lblNoCliente"
                        style="@style/TativoTextoContrato"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/lblBuenoPor"
                        style="@style/TativoTextoContrato"
                        android:layout_weight="1"
                        android:gravity="right" />
                </LinearLayout>


                <TextView
                    android:id="@+id/lblPagareP1"
                    style="@style/TativoTextoContrato"/>
                <TextView
                    android:id="@+id/lblPagareP2"
                    style="@style/TativoTextoContrato"/>
                <TextView
                    android:id="@+id/lblPagareP3"
                    style="@style/TativoTextoContrato"/>
                <TextView
                    android:id="@+id/lblPagareP4"
                    style="@style/TativoTextoContrato"/>
                <TextView
                    android:id="@+id/lblPagareP5"
                    style="@style/TativoTextoContrato"/>
                <TextView
                    android:id="@+id/lblPagareP6"
                    style="@style/TativoTextoContrato"/>
                <TextView
                    android:id="@+id/lblPagareP7"
                    style="@style/TativoTextoContrato"/>
                <TextView
                    android:id="@+id/lblPagareP8"
                    style="@style/TativoTextoContrato"/>
                <TextView
                    android:id="@+id/lblPagareP9"
                    android:layout_width ="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/lblPagareP10"
                    android:layout_width ="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/lblPagareP11"
                    android:layout_width ="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/lblPagareP12"
                    android:layout_width ="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/lblPagareP13"
                    android:layout_width ="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/lblPagareP14"
                    style="@style/TativoTextoContrato" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Acepto los términos y condiciones plasmados en la carátula de contrato"
                    android:checked="false"
                    android:layout_marginTop="10dp"/>
                <Button
                    android:id="@+id/btnCaratulaContrato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btnSiguiente"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:textAllCaps="false"
                    android:background="@color/colorAzulOscuro"
                    style="@style/TativoBotonAceptar" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
