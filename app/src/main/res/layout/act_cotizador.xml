<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/TativoRelativeLayoutPrincipal"
    android:orientation="vertical"
    tools:context="com.tativo.app.tativo.LogIn.Actividades.Act_Cotizador">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/head"
        android:orientation="vertical"
        android:id="@+id/divHead"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/divPantalla"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/pantalla"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_weight="6">
        <TextView
            android:id="@+id/lblTitulo1"
            style="@style/TativoTituloCotizador"
            android:paddingTop="50dp"
            />
        <TextView
            android:id="@+id/lblTitulo2"
            style="@style/TativoTituloCotizador"
            />
        <TextView
            android:id="@+id/lblTitulo3"
            style="@style/TativoTituloCotizador"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/divBody"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/body"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3">
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/foot"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnListo"
            android:background="@drawable/listo"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>



