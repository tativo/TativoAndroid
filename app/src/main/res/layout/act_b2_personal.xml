<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/TativoRelativeLayoutPrincipalSinMargen"
    android:orientation="vertical"
    tools:context=".LogIn.Actividades.Act_LogIn">

    <ScrollView style="@style/TativoScrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TativoRelativeLayoutPrincipal"
            android:layout_marginTop="60dp"
            android:paddingBottom="80dp"
            android:orientation="vertical">

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:id="@+id/btnFocoInicialB2"/>

            <LinearLayout style="@style/TativoLinearLayoutBorde">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <android.support.design.widget.TextInputLayout
                        style="@style/TativoTextInputLayout"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <AutoCompleteTextView
                            android:id="@+id/txtFechaNacimiento"
                            android:hint="@string/txtFechaNacimiento"
                            android:inputType="date"
                            android:maxLines="1"
                            android:maxLength="10"
                            android:focusable="false"
                            style="@style/TativoAutoCompleteTextView"/>
                    </android.support.design.widget.TextInputLayout>
                    <Button
                        android:id="@+id/btnFechaNacimiento"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@android:drawable/ic_menu_my_calendar"
                        style="@style/Widget.AppCompat.Button.Borderless"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde">
                <android.support.design.widget.TextInputLayout
                    style="@style/TativoTextInputLayout">
                    <AutoCompleteTextView
                        android:id="@+id/txtDependientes"
                        android:hint="@string/txtPersonasDependientes"
                        android:inputType="number"
                        android:maxLines="1"
                        android:maxLength="3"
                        style="@style/TativoAutoCompleteTextView"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde">
                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/spnGenero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/ListaGenero"
                    app:ms_hint="@string/spnGenero"
                    app:ms_enableErrorLabel="false"
                    app:ms_thickness="0dp"
                    app:ms_alignLabels="true">
                </fr.ganfra.materialspinner.MaterialSpinner>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde">
                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/spnEstadoCivil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_hint="@string/spnEstadoCivil"
                    app:ms_enableErrorLabel="false"
                    app:ms_thickness="0dp"
                    app:ms_alignLabels="true">
                </fr.ganfra.materialspinner.MaterialSpinner>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde">
                <android.support.design.widget.TextInputLayout
                    style="@style/TativoTextInputLayout">
                    <AutoCompleteTextView
                        android:id="@+id/txtCodigoPostal"
                        android:hint="@string/txtCodigoPostal"
                        android:inputType="number"
                        android:maxLines="1"
                        android:maxLength="5"
                        style="@style/TativoAutoCompleteTextView"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde"
                android:padding="8dp">
                <TextView style="@style/TativoTextViewHint"
                    android:hint="@string/lblEstadoMunicipio"
                    android:id="@+id/hnEstadoMunicipioTitulo" />
                <TextView style="@style/TativoTextView"
                    android:id="@+id/hnEstadoMunicipioTexto"
                    android:singleLine="false"/>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spnColonia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/Lista"
                        app:ms_hint="@string/spnColonia"
                        app:ms_enableErrorLabel="false"
                        app:ms_thickness="0dp"
                        app:ms_multiline="false"
                        app:ms_alignLabels="true">
                    </fr.ganfra.materialspinner.MaterialSpinner>
                    <TextView
                        android:id="@+id/txtAgregarColonia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agregar colonia"
                        android:textSize="12sp"
                        android:textColor="@color/colorLinlk"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="8dp" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde"
                android:visibility="gone"
                android:id="@+id/lyNuevaColonia">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <android.support.design.widget.TextInputLayout
                        style="@style/TativoTextInputLayout"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <AutoCompleteTextView
                            android:id="@+id/txtNuevaColonia"
                            android:hint="@string/txtNuevaColonia"
                            android:inputType="textCapSentences"
                            android:maxLines="1"
                            android:maxLength="250"
                            style="@style/TativoAutoCompleteTextView"/>
                    </android.support.design.widget.TextInputLayout>
                    <Button
                        android:id="@+id/btnCancelNuevacolonia"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@android:drawable/ic_menu_close_clear_cancel"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/TativoLinearLayoutBorde">
                <android.support.design.widget.TextInputLayout
                    style="@style/TativoTextInputLayout">
                    <AutoCompleteTextView
                        android:id="@+id/txtCalle"
                        android:hint="@string/txtCalle"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:maxLength="250"
                        style="@style/TativoAutoCompleteTextView"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde">
                <android.support.design.widget.TextInputLayout
                    style="@style/TativoTextInputLayout">
                    <AutoCompleteTextView
                        android:id="@+id/txtNumeroExt"
                        android:hint="@string/txtNumeroExt"
                        android:inputType="text"
                        android:maxLines="1"
                        android:maxLength="100"
                        style="@style/TativoAutoCompleteTextView"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde">
                <android.support.design.widget.TextInputLayout
                    style="@style/TativoTextInputLayout">
                    <AutoCompleteTextView
                        android:id="@+id/txtNumeroInt"
                        android:hint="@string/txtNumeroInt"
                        android:inputType="text"
                        android:maxLines="1"
                        android:maxLength="100"
                        style="@style/TativoAutoCompleteTextView"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde">
                <android.support.design.widget.TextInputLayout
                    style="@style/TativoTextInputLayout">
                    <AutoCompleteTextView
                        android:id="@+id/txtTelefonoCelular"
                        android:hint="@string/txtTelefonoCelular"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:maxLength="30"
                        style="@style/TativoAutoCompleteTextView"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde">
                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/spnMarcaCelular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/Lista"
                    app:ms_hint="@string/spnMarcaCelular"
                    app:ms_enableErrorLabel="false"
                    app:ms_thickness="0dp"
                    app:ms_alignLabels="true">
                </fr.ganfra.materialspinner.MaterialSpinner>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/lblTarjetaCredito"
                    android:hint="@string/lblTarjetaCredito"
                    android:inputType="text|textMultiLine"
                    android:singleLine="false"
                    style="@style/TativoAutoCompleteTextView"/>
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/swtTarjetaCredito"
                    android:gravity="center_horizontal"
                    android:textOn="Si"
                    android:textOff="No" />
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde">
                <android.support.design.widget.TextInputLayout
                    style="@style/TativoTextInputLayout">
                    <AutoCompleteTextView
                        android:id="@+id/txt4DigitosTarjeta"
                        android:hint="@string/txt4DigitosTarjeta"
                        android:inputType="number"
                        android:maxLines="1"
                        android:maxLength="4"
                        android:textSize="14sp"
                        style="@style/TativoAutoCompleteTextView"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/lblCreditoHipotecario"
                    android:hint="@string/lblCreditoHipotecario"
                    android:inputType="text|textMultiLine"
                    android:singleLine="false"
                    style="@style/TativoAutoCompleteTextView"/>
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/swtCreditoHipotecario"
                    android:gravity="center_horizontal"
                    android:textOn="Si"
                    android:textOff="No" />
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/lblCreditoAutomotriz"
                    android:hint="@string/lblCreditoAutomotriz"
                    android:inputType="text|textMultiLine"
                    android:singleLine="false"
                    style="@style/TativoAutoCompleteTextView"/>
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/swtCreditoAutomotriz"
                    android:gravity="center_horizontal"
                    android:textOn="Si"
                    android:textOff="No" />
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde"
                android:paddingRight="10dp">
                <CheckBox
                    android:id="@+id/ckTerminosCondiciones1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ckTerminosCondiciones1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                </CheckBox>
                <CheckBox
                    android:id="@+id/ckTerminosCondiciones2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ckTerminosCondiciones2"
                    android:layout_marginBottom="8dp">
                </CheckBox>
                <CheckBox
                    android:id="@+id/ckTerminosCondiciones3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ckTerminosCondiciones3"
                    android:layout_marginBottom="8dp">
                </CheckBox>
                <CheckBox
                    android:id="@+id/ckTerminosCondiciones4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ckTerminosCondiciones4"
                    android:layout_marginBottom="8dp">
                </CheckBox>
            </LinearLayout>
            <Button
                android:id="@+id/btnInfPersonal"
                android:text="@string/btnInfPersonal"
                style="@style/TativoBotonAceptar"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout style="@style/TativoLayoutTitulo">
        <TextView
            style="@style/TativoTextViewTitulo"
            android:text="@string/lblCuentanosSobreTi" />
        <TextView
            style="@style/TativoTextViewSubTitulo"
            android:text="@string/lblTituloInfPersonal" />
    </LinearLayout>
</RelativeLayout>