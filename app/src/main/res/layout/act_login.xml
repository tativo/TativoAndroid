<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/TativoRelativeLayoutPrincipalSinMargen"
    tools:context=".LogIn.Actividades.Act_LogIn"
    android:orientation="vertical">

    <ScrollView style="@style/TativoScrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TativoRelativeLayoutPrincipal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/txtRequisitos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Requisitos"
                        android:textStyle="bold"
                        android:textSize="16dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right">
                    <Button
                        android:id="@+id/btnMiCuenta"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:text="Mi Cuenta"
                        android:background="@color/colorAzulOscuro"
                        android:textColor="@color/colorBlanco" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lblRegistro"
                android:textSize="22dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="10dp" />

            <LinearLayout style="@style/TativoLayoutBordeRelleno">
                <TextView
                    style="@style/TativoTextViewTitulo"
                    android:text="@string/lblTituRegistro" />
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde">
                <android.support.design.widget.TextInputLayout
                    style="@style/TativoTextInputLayout">
                    <AutoCompleteTextView
                        android:id="@+id/txtNombre"
                        android:hint="@string/txtNombre"
                        android:inputType="textAutoComplete|textCapWords"
                        android:maxLines="1"
                        style="@style/TativoAutoCompleteTextView"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde">
                <android.support.design.widget.TextInputLayout
                    style="@style/TativoTextInputLayout">
                    <AutoCompleteTextView
                        android:id="@+id/txtApellidoPaterno"
                        android:hint="@string/txtApellidoPaterno"
                        android:inputType="textAutoComplete|textCapWords"
                        android:maxLines="1"
                        style="@style/TativoAutoCompleteTextView"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde">
                <android.support.design.widget.TextInputLayout
                    style="@style/TativoTextInputLayout">
                    <AutoCompleteTextView
                        android:id="@+id/txtApellidoMaterno"
                        android:hint="@string/txtApellidoMaterno"
                        android:inputType="textAutoComplete|textCapWords"
                        android:maxLines="1"
                        style="@style/TativoAutoCompleteTextView"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde">
                <android.support.design.widget.TextInputLayout
                    style="@style/TativoTextInputLayout">
                    <AutoCompleteTextView
                        android:id="@+id/txtCorreo"
                        android:hint="@string/hnCorreo"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        style="@style/TativoAutoCompleteTextView"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde">
                <android.support.design.widget.TextInputLayout
                    style="@style/TativoTextInputLayout">
                    <AutoCompleteTextView
                        android:id="@+id/txtContrasena"
                        android:hint="@string/hnContrasena"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        style="@style/TativoAutoCompleteTextView"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde">
                <android.support.design.widget.TextInputLayout
                    style="@style/TativoTextInputLayout">
                    <AutoCompleteTextView
                        android:id="@+id/txtConfirmaContrasena"
                        android:hint="@string/hnConfirmacionContrasena"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        style="@style/TativoAutoCompleteTextView"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btnRegistro"
                android:text="@string/btnRegistro"
                style="@style/TativoBotonAceptar"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
