<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/TativoRelativeLayoutPrincipalSinMargen"
    tools:context=".LogIn.Actividades.Act_LogIn"
    android:orientation="vertical">

    <ScrollView style="@style/TativoScrollView"
        android:layout_marginTop="55dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/flContenedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:alpha="0.95"
        android:touchscreenBlocksFocus="false">
        <Button
            android:id="@+id/frgIniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorBlanco"
            android:text="Tengo cuenta"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/frgRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorBlanco"
            android:text="Quiero registrarme"
            android:textAllCaps="false" />
    </LinearLayout>

</RelativeLayout>
