<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/TativoRelativeLayoutPrincipalSinMargen"
    android:orientation="vertical"
    tools:context=".LogIn.Actividades.Act_LogIn">

    <ScrollView android:id="@+id/svDocumentos"
        style="@style/TativoScrollView">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TativoRelativeLayoutPrincipal"
            android:layout_marginTop="60dp"
            android:paddingBottom="80dp"
            android:orientation="vertical">

            <LinearLayout style="@style/TativoLayoutBordeRelleno">
                <TextView style="@style/TativoTextViewEncabezado"
                    android:text="@string/lblInformacionAcreditado"/>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde"
                android:padding="8dp">
                <TextView style="@style/TativoTextViewHint"
                    android:hint="@string/hnNombreCompleto" />
                <TextView style="@style/TativoTextView"
                    android:id="@+id/lblNobreCompleto" />
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde"
                android:padding="8dp">
                <TextView style="@style/TativoTextViewHint"
                    android:hint="@string/hnDireccion" />
                <TextView style="@style/TativoTextView"
                    android:id="@+id/lblDireccion" />
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde"
                android:padding="8dp">
                <TextView style="@style/TativoTextViewHint"
                    android:hint="@string/hnTel" />
                <TextView style="@style/TativoTextView"
                    android:id="@+id/lblTelefono" />
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde"
                android:padding="8dp">
                <TextView style="@style/TativoTextViewHint"
                    android:hint="@string/hnCorreo" />
                <TextView style="@style/TativoTextView"
                    android:id="@+id/lblCorreo" />
            </LinearLayout>




            <LinearLayout style="@style/TativoLayoutBordeRelleno">
                <TextView style="@style/TativoTextViewEncabezado"
                    android:text="@string/lblInformacionDeposito"/>
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde"
                android:padding="8dp">
                <TextView style="@style/TativoTextViewHint"
                    android:hint="@string/hnNombreBanco" />
                <TextView style="@style/TativoTextView"
                    android:id="@+id/lblNombreBanco" />
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde"
                android:padding="8dp">
                <TextView style="@style/TativoTextViewHint"
                    android:hint="@string/hnNumeroTarjetaCLABE" />
                <TextView style="@style/TativoTextView"
                    android:id="@+id/lblNumeroTarjetaCLABE" />
            </LinearLayout>
            <LinearLayout style="@style/TativoLinearLayoutBorde"
                android:padding="8dp">
                <TextView style="@style/TativoTextViewHint"
                    android:hint="@string/hnMonto" />
                <TextView style="@style/TativoTextView"
                    android:id="@+id/lblMonto" />
            </LinearLayout>

            <LinearLayout style="@style/TativoLayoutBordeRelleno">
                <TextView style="@style/TativoTextViewEncabezado"
                    android:text="@string/lblInformacionPago"/>
            </LinearLayout>



            <LinearLayout style="@style/TativoLinearLayoutBorde"
                android:padding="8dp">
                <TextView style="@style/TativoTextViewHint"
                    android:hint="@string/hnFechaInicio" />
                <TextView style="@style/TativoTextView"
                    android:id="@+id/lblFechaInicio" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout style="@style/TativoLinearLayoutBorde"
                    android:padding="8dp"
                    android:layout_weight="1" >
                    <TextView style="@style/TativoTextViewHint"
                        android:hint="@string/hnPlazoCompromiso" />
                    <TextView style="@style/TativoTextView"
                        android:id="@+id/lblPlazoCompromiso" />
                </LinearLayout>
                <LinearLayout style="@style/TativoLinearLayoutBorde"
                    android:padding="8dp"
                    android:layout_weight="1" >
                    <TextView style="@style/TativoTextViewHint"
                        android:hint="@string/hnPlazoLimite" />
                    <TextView style="@style/TativoTextView"
                        android:id="@+id/lblPlazoLimite" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout style="@style/TativoLinearLayoutBorde"
                    android:padding="8dp"
                    android:layout_weight="1" >
                    <TextView style="@style/TativoTextViewHint"
                        android:hint="@string/hnFechaCompromiso" />
                    <TextView style="@style/TativoTextView"
                        android:id="@+id/lblFechaCompromiso" />
                </LinearLayout>
                <LinearLayout style="@style/TativoLinearLayoutBorde"
                    android:padding="8dp"
                    android:layout_weight="1" >
                    <TextView style="@style/TativoTextViewHint"
                        android:hint="@string/hnFechaLimite" />
                    <TextView style="@style/TativoTextView"
                        android:id="@+id/lblFechaLimite" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout style="@style/TativoLinearLayoutBorde"
                    android:padding="8dp"
                    android:layout_weight="1" >
                    <TextView style="@style/TativoTextViewHint"
                        android:hint="@string/hnInteresCompromiso" />
                    <TextView style="@style/TativoTextView"
                        android:id="@+id/lblInteresCompromiso" />
                </LinearLayout>
                <LinearLayout style="@style/TativoLinearLayoutBorde"
                    android:padding="8dp"
                    android:layout_weight="1" >
                    <TextView style="@style/TativoTextViewHint"
                        android:hint="@string/hnInteresLimite" />
                    <TextView style="@style/TativoTextView"
                        android:id="@+id/lblInteresLimite" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout style="@style/TativoLinearLayoutBorde"
                    android:padding="8dp"
                    android:layout_weight="1" >
                    <TextView style="@style/TativoTextViewHint"
                        android:hint="@string/hnIVACompromiso" />
                    <TextView style="@style/TativoTextView"
                        android:id="@+id/lblIVACompromiso" />
                </LinearLayout>
                <LinearLayout style="@style/TativoLinearLayoutBorde"
                    android:padding="8dp"
                    android:layout_weight="1" >
                    <TextView style="@style/TativoTextViewHint"
                        android:hint="@string/hnIVALimite" />
                    <TextView style="@style/TativoTextView"
                        android:id="@+id/lblIVALimite" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout style="@style/TativoLinearLayoutBorde"
                    android:padding="8dp"
                    android:layout_weight="1" >
                    <TextView style="@style/TativoTextViewHint"
                        android:hint="@string/hnTotalCompromiso" />
                    <TextView style="@style/TativoTextView"
                        android:id="@+id/lblTotalCompromiso" />
                </LinearLayout>
                <LinearLayout style="@style/TativoLinearLayoutBorde"
                    android:padding="8dp"
                    android:layout_weight="1" >
                    <TextView style="@style/TativoTextViewHint"
                        android:hint="@string/hnTotalLimite" />
                    <TextView style="@style/TativoTextView"
                        android:id="@+id/lblTotalLimite" />
                </LinearLayout>
            </LinearLayout>










            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Haz clic en el botón para ver los documentos y posteriormente aceptar términos y condiciones"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lybtnVerDocumentos">
                <LinearLayout style="@style/TativoLinearLayoutBordeGris"
                    android:padding="30dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAzulOscuro"
                        android:textColor="@color/colorBlanco"
                        android:text="@string/btnVerDocumentos"
                        android:id="@+id/btnVerDocumentos" />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/lyCargaDocumentos"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Carga de documentos"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Sube aquí tu identificación oficial (frente y vuelta)"/>
                </LinearLayout>

                <LinearLayout style="@style/TativoLinearLayoutBordeGris"
                    android:padding="30dp">
                    <ImageView
                        android:id="@+id/imgIfeFrontal"
                        android:src="@drawable/inefrontal"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"
                        />
                    <LinearLayout
                        android:id="@+id/progresFrontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Enviando foto"
                            />
                        <pl.droidsonroids.gif.GifTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/progresbar"
                            />
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnFotoFrontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAmarillo"
                        android:textColor="@color/colorBlanco"
                        android:text="@string/btnSubirFoto"
                        android:focusable="true"
                        />
                    <ImageView
                        android:id="@+id/imgIfeTrasera"
                        android:src="@drawable/inetrasera"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"
                        />
                    <LinearLayout
                        android:id="@+id/progresTrasera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Enviando foto"
                            />
                        <pl.droidsonroids.gif.GifTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/progresbar"
                            />
                    </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAmarillo"
                        android:textColor="@color/colorBlanco"
                        android:text="@string/btnSubirFoto"
                        android:layout_marginTop="10dp"
                        android:id="@+id/btnFotoTrasera"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Coloca tu firma digital"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Ingresa tu nombre tal cual lo pusiste en tu registro"/>
                </LinearLayout>


                <LinearLayout style="@style/TativoLinearLayoutBordeGris"
                    android:paddingBottom="8dp">
                    <android.support.design.widget.TextInputLayout
                        style="@style/TativoTextInputLayout">
                        <AutoCompleteTextView
                            android:id="@+id/txtFirmaDocumentos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords|textAutoCorrect"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="8dp"
                        android:text="he leído y autorizo el uso de mi firma electrónica en este pagaré"/>
                </LinearLayout>
                <Button
                    android:layout_marginTop="15dp"
                    android:id="@+id/btnAceptarDocumentos"
                    android:text="@string/btnAceptarDocumentos"
                    style="@style/TativoBotonAceptar"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout style="@style/TativoLayoutTitulo">
        <TextView
            style="@style/TativoTextViewTitulo"
            android:text="FIRMA DE DOCUMENTOS" />
        <TextView
            style="@style/TativoTextViewSubTitulo"
            android:text="" />
    </LinearLayout>
</RelativeLayout>