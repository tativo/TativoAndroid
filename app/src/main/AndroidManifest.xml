<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tativo.app.tativo">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permission to vibrate - recommended, allows vibration feedback on scan -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Permission to use camera - required -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Camera features - recommended -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-feature android:name="android.hardware.camera.flash" android:required="false" />

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:name=".Utilidades.Globals"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LogIn.Actividades.Act_LogIn"
            android:configChanges="screenSize|orientation"/>
        <activity android:name=".LogIn.Actividades.Act_Cotizador">
            <intent-filter>
                <action android:name="android.intent.action.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!--
       <activity android:name=".Splash">
           <intent-filter>
               <action android:name="android.intent.action.MAIN" />
               <category android:name="android.intent.category.LAUNCHER" />
           </intent-filter>
       </activity>
        -->
        <activity android:name=".Bloques.Actividades.Act_B1_Referencias"
            android:configChanges="screenSize|orientation"/>
        <activity android:name=".Bloques.Actividades.Act_B2_Personal"
            android:configChanges="screenSize|orientation"/>
        <activity android:name=".Bloques.Actividades.Act_B3_InfDeposito"
            android:configChanges="screenSize|orientation"/>
        <activity android:name=".Bloques.Actividades.Act_B4_Laboral"
            android:configChanges="screenSize|orientation"/>
        <activity android:name=".Bloques.Actividades.Act_B5_General"
            android:configChanges="screenSize|orientation"/>
        <activity android:name=".Bloques.Actividades.Act_Documentos"
            android:configChanges="screenSize|orientation"/>
        <activity android:name=".Bloques.Actividades.Act_B3_ConfirmarPIN"
            android:configChanges="screenSize|orientation"/>
        <!-- Activities responsible for gathering payment info -->
        <activity android:name="io.card.payment.CardIOActivity" android:configChanges="keyboardHidden|orientation" />
        <activity android:name="io.card.payment.DataEntryActivity" />

    </application>

</manifest>
